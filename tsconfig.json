{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "rootDirs": [
      "./src"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
